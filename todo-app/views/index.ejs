<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
  </head>
  <body>
    <h1><%= title %></h1>
    <table>
      <tr>
        <th>Titulek</th>
        <th>Hotovo</th>
      </tr>

      <% for (const todo of todos) { %>
      <tr>
        <td><a href="/todo/<%= todo.id %>"><%= todo.text %></a></td>

        <td><%= todo.done ? 'ano' : 'ne' %></td>
        <td>
          <a
            href="/delete/<%= todo.id %> "
            onclick="return confirm('Opravdu odstranit?');"
            >Odstranit</a
          >
        </td>
      </tr>
      <% } %>
    </table>
    <form action="/add" method="post">
      <input type="text" name="text" />
      <button type="submit">Přidat nový úkol</button>
    </form>
  </body>
</html>
